<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinasofti.ssm.dao.AdminDao">
        <resultMap type="Admin" id="resultAdmin" autoMapping="true">
          <id property="id" column="id"/>
        </resultMap>
        <select id="fingByAdminId" parameterType="String" resultMap="resultAdmin">
             select *
             from admin
             where adminId=#{adminId}
        </select>
        <select id="findAll" resultMap="resultAdmin">
            select *
            from admin
        </select>
        <select id="findById" parameterType="int" resultMap="resultAdmin">
             select *
             from admin
             where id=#{id}
        </select>
        <insert id="insert" parameterType="Admin">
            insert into admin
            (id,adminId,adminName,adminTel,adminPhone,adminEmail,adminPassword,deleteStatus)
            values(#{id},#{adminId},#{adminName},#{adminTel},#{adminPhone},#{adminEmail},#{adminPassword},#{deleteStatus})
        </insert>
        <update id="uodate" parameterType="Admin">
            update admin set
                      adminId=#{adminId},
                      adminName=#{adminName},
                      adminTel=#{adminTel},
                      adminPhone=#{adminPhone},
                      adminEmail=#{adminEmail},
                      adminPassword=#{adminPassword},
                      deleteStatus=#{deleteStatus};
             where id=#{id}
        </update>
        <delete id="delete" parameterType="String">
            delete from admin
            where adminId=#{adminId} 
        </delete>
        
</mapper>